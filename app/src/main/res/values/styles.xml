<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/josefinsans_regular</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonDefaultStyle" parent="AppTheme">
        <item name="android:textSize">18sp</item>
        <item name="android:background">#36B88B</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/josefinsans_bold</item>
    </style>

    <style name="ButtonTransparentStyle" parent="AppTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:textColor">#36B88B</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/josefinsans_bold</item>
    </style>

</resources>
