<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:id="@+id/condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:text="condition"/>

    <ImageView
        android:id="@+id/remove"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_remove_black_24dp"
        android:paddingStart="3dp"
        android:paddingEnd="3dp"
        android:background="@drawable/transparent_with_border_light_gray"
        android:layout_toStartOf="@+id/quantity"/>

    <TextView
        android:id="@+id/quantity"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:background="@drawable/transparent_with_border_light_gray"
        android:layout_toStartOf="@+id/plus"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:textSize="14sp"
        android:text="5"/>

    <ImageView
        android:id="@+id/plus"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_add_black_24dp"
        android:layout_marginEnd="30dp"
        android:paddingStart="3dp"
        android:paddingEnd="3dp"
        android:background="@drawable/transparent_with_border_light_gray"
        android:layout_toStartOf="@+id/sell_inventory"/>

    <Button
        android:id="@+id/sell_inventory"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_gravity="center_vertical"
        android:text="@string/sell"
        android:layout_centerVertical="true"
        android:textAllCaps="false"
        android:layout_alignParentEnd="true"
        style="@style/ButtonBlueTransparentStyle" />

</RelativeLayout>