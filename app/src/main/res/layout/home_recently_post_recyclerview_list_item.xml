<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <View
        android:layout_width="15dp"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/item_info_linear_layout"
        android:layout_alignBottom="@+id/item_info_linear_layout"/>

    <LinearLayout
        android:id="@+id/item_info_linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/recent_item_img"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/recent_item_name"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_medium"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Name"/>

        <TextView
            android:id="@+id/recent_item_price"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="$50"
            android:textColor="@color/black"
            android:fontFamily="@font/lato_bold"
            android:textSize="16sp"/>


    </LinearLayout>

</RelativeLayout>

