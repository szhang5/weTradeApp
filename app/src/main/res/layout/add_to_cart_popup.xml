<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/add_to_cart_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        android:layout_centerVertical="true"
        android:scaleType="fitCenter"/>

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/add_to_cart_quantity"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_below="@+id/add_to_cart_condition"
        android:background="@drawable/dropdown_style" />

    <TextView
        android:id="@+id/add_to_cart_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:textColor="@color/black"
        android:layout_toEndOf="@+id/add_to_cart_image"
        android:text="Name: "/>

    <TextView
        android:id="@+id/add_to_cart_condition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:layout_toEndOf="@+id/add_to_cart_image"
        android:layout_below="@+id/add_to_cart_name"
        android:text="Condition: "/>

    <TextView
        android:id="@+id/add_to_cart_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="$ 50.00"
        android:layout_toEndOf="@+id/add_to_cart_image"
        android:layout_below="@+id/add_to_cart_condition"
        android:layout_marginTop="5dp"
        android:textColor="#FF0000"/>

</RelativeLayout>